{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "rules": {
    "indent": [
        "error",
        "tab",
        {"SwitchCase": 1}
    ],
    "linebreak-style": [
        0,
        "windows"
    ],
    "quotes": [
        "error",
        "single"
    ],
    "semi": [
        "error",
        "never"
    ],
    "no-var": "error",
    "switch-colon-spacing": [
        "error",
        {
            "after": true,
            "before": false
        }
    ]
  }
}